---
import TechPill from "./TechPill.astro";
const { translations } = Astro.props;

const projects = [
    {
        id: 'online_shop',
        github: "https://github.com/ecerrato02/Proyecto-Angular_Cerrato_Nievas",
        image: "/img/proyecto-2.webp",
    },
    {
        id: 'primer_portfolio',
        link: "https://eduni11.github.io/Portafolio-Digital/",
        github: "https://github.com/EDUNI11/Portafolio-Digital",
        image: "/img/proyecto-1.webp",
    }
]
---
{
    projects.map((project) => {
        const title = translations.projects[project.id].title;
        const description = translations.projects[project.id].description;

        const haveLink = project?.link ? "text-xs flex text-[--principal-text-color] py-2 px-4 lg:py-2 lg:px-4 font-bold rounded-xl bg-[--secondary-low-opacity] hover:saturate-[2.8] transition-all duration-300" : "text-xs flex text-[--principal-text-color] py-2 px-4 lg:py-2 lg:px-4 font-bold rounded-xl bg-white/30 disabled";
        return <article class="lg:ml-2 mx-auto mt-20 w-[95%] mb-8 group">
            <div class="gap-y-4 justify-center items-center text-[--principal-text-color]">
                <div class="lg:flex">
                    <img src={project.image} alt={title} loading="lazy" class="w-full lg:w-80 lg:group-hover:border-[.04em] lg:group-hover:border-[--accent] mb-8 lg:mb-0 mr-8 rounded-xl transition-all duration-500 sm:h-full lg:scale-110 lg:group-hover:scale-105"/>
                    <div class="flex md:max-w-[70%] md:mx-auto flex-col gap-y-2">
                        <h3 class="text-2xl text-center md:text-left font-bold">{title}</h3>
                        <p class="text-[.9em]">{description}</p>
                        <div class="flex flex-row gap-x-4 justify-center mt-4 items-center">
                            <a href={project?.link} target="_blank" rel="noopener noreferrer"
                               class={haveLink}>
                                <svg class="size-5 mr-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
                                <span class="">{translations.showProjects}</span>
                            </a>
                            <a href={project.github} target="_blank" rel="noopener noreferrer"
                               class="text-xs flex text-[--principal-text-color] py-2 px-4 lg:py-2 lg:px-4 font-bold rounded-xl bg-[--secondary-low-opacity] hover:saturate-[2.8] transition-all duration-300">
                                <svg class="size-7 mr-2" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="100" height="100" viewBox="0 0 32 32">
                                    <path fill="currentColor" fill-rule="evenodd" d="M 16 4 C 9.371094 4 4 9.371094 4 16 C 4 21.300781 7.4375 25.800781 12.207031 27.386719 C 12.808594 27.496094 13.027344 27.128906 13.027344 26.808594 C 13.027344 26.523438 13.015625 25.769531 13.011719 24.769531 C 9.671875 25.492188 8.96875 23.160156 8.96875 23.160156 C 8.421875 21.773438 7.636719 21.402344 7.636719 21.402344 C 6.546875 20.660156 7.71875 20.675781 7.71875 20.675781 C 8.921875 20.761719 9.554688 21.910156 9.554688 21.910156 C 10.625 23.746094 12.363281 23.214844 13.046875 22.910156 C 13.15625 22.132813 13.46875 21.605469 13.808594 21.304688 C 11.144531 21.003906 8.34375 19.972656 8.34375 15.375 C 8.34375 14.0625 8.8125 12.992188 9.578125 12.152344 C 9.457031 11.851563 9.042969 10.628906 9.695313 8.976563 C 9.695313 8.976563 10.703125 8.65625 12.996094 10.207031 C 13.953125 9.941406 14.980469 9.808594 16 9.804688 C 17.019531 9.808594 18.046875 9.941406 19.003906 10.207031 C 21.296875 8.65625 22.300781 8.976563 22.300781 8.976563 C 22.957031 10.628906 22.546875 11.851563 22.421875 12.152344 C 23.191406 12.992188 23.652344 14.0625 23.652344 15.375 C 23.652344 19.984375 20.847656 20.996094 18.175781 21.296875 C 18.605469 21.664063 18.988281 22.398438 18.988281 23.515625 C 18.988281 25.121094 18.976563 26.414063 18.976563 26.808594 C 18.976563 27.128906 19.191406 27.503906 19.800781 27.386719 C 24.566406 25.796875 28 21.300781 28 16 C 28 9.371094 22.628906 4 16 4 Z"></path>
                                </svg>
                                <span class="mt-[0.32rem]">{translations.showRepositories}</span>
                            </a>
                        </div>
                        <TechPill bgColor="blue">
                            <svg class="size-5 mr-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>
                            TEST
                        </TechPill>
                    </div>
                </div>
            </div>
        </article>
        })
    }

