<style>

    @keyframes slide {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(-100%);
        }
    }

    .logos-slider img {
        height: 2rem;
        margin: 0 1em;
    }

    .logos-slider {
        display: inline-flex;
        animation: 20s slide infinite linear;
    }

    .logos {
        overflow: hidden;
        padding: 3rem 0;
        white-space: nowrap;
        position: relative;
    }

    .logos:hover .logos-slider {
        animation-play-state: paused;
    }

    .logos:before {
        left: 0;
        background: linear-gradient(to left, rgba(255, 255, 255, 0) 50%, var(--background) 100%);
    }

    .logos:after {
        right: 0;
        background: linear-gradient(to right, rgba(255, 255, 255, 0) 50%, var(--background) 100%);
    }

    .logos:before, .logos:after {
        position: absolute;
        top: 0;
        width: 20rem;
        height: 100%;
        content: "";
        z-index: 2;
    }
</style>
